pipeline {
    agent {
        node {
            label nodelabel
        }
    }

    options {
        timestamps()
    }

    environment {
        ISOLATION_ID = sh(returnStdout: true,
                          script: 'printf $BUILD_TAG | sha256sum | cut -c1-64').trim()
    }

    stages {

        stage ('Prepare Build Parameters') {
            steps {
                script {
                    env.JK_RUNID = "Nightly_" + new Date().format("yyyy-MM-dd-HH-mm-ss") + "." + env.BUILD_NUMBER.toString()
                    env.NIGHTLY_WORKSPACE_DIR = env.HOME + "/automation_nightly/" + env.JK_RUNID
                    println "###################################################################################################################"
                    println "#=================================================================================================================="
                    println "# JK_RUNID: " + env.JK_RUNID
                    println "# NIGHTLY_WORKSPACE_DIR: " + env.NIGHTLY_WORKSPACE_DIR
                    println "#=================================================================================================================="
                    println "###################################################################################################################"
                }
            }
        }

        stage('Checkout avalon/master, CI & Validation Repo') {
            steps {
                sh '''
                if docker ps -a | grep -q 'avalon-shell'; then
                    docker stop $(docker ps -a -q)
                    docker rm $(docker ps -a -q)
                    docker network rm besu_local_net
                fi
                docker system prune -af
                mkdir -p $NIGHTLY_WORKSPACE_DIR/dev_repo
                cd $NIGHTLY_WORKSPACE_DIR/dev_repo
                git clone --single-branch --branch avalon-ubuntu-20.04 https://github.com/pankajgoyal2/trusted-compute-framework.git
                cd trusted-compute-framework

                mkdir -p $NIGHTLY_WORKSPACE_DIR/ci_repo
                cd $NIGHTLY_WORKSPACE_DIR/ci_repo
                git clone --single-branch --branch ci-ubuntu-20.04 https://github.com/pankajgoyal2/trusted-compute-framework.git

                mkdir -p $NIGHTLY_WORKSPACE_DIR/val_repo
                cd $NIGHTLY_WORKSPACE_DIR/val_repo
                git clone --single-branch --branch automation_framework_rework  https://github.com/jinengandhi-intel/avalon.git
                cd avalon

                sed -i "s/proxy_mode = False/proxy_mode = True/g" tests/automation_framework/env.py
                sed -i "s/blockchain_type = ''/blockchain_type = 'ethereum'/g" tests/automation_framework/env.py
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tests/

                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/eth-config-update.sh $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci/
                chmod +x $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci/eth-config-update.sh
                cd $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci
                ./eth-config-update.sh besu $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/sdk/avalon_sdk/tcf_connector.toml

                cp -rf $NIGHTLY_WORKSPACE_DIR/val_repo/avalon/tests/automation_framework $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tests/
                cp -rf $NIGHTLY_WORKSPACE_DIR/val_repo/avalon/tests/ci/Demo_Tests $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tests/
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/docker-compose-direct-model.yaml $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/docker-compose-wp-direct-model.yaml $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/docker-compose-besu-proxy-model.yaml $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/docker-compose-direct-model-sgx.yaml $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci/
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/docker-compose-besu-tests.yaml $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/ci/
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/run_eth_proxy_model_tests.sh $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tools/
                chmod +x $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tools/run_eth_proxy_model_tests.sh
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/run_fabric_proxy_model_tests.sh $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tools/
                chmod +x $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/tools/run_fabric_proxy_model_tests.sh
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/run_tests $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/docker/Dockerfile $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/docker/
                cp -rf $NIGHTLY_WORKSPACE_DIR/ci_repo/trusted-compute-framework/tests/ci/run_docker_test  $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/run_docker_test
                chmod +x $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/run_docker_test
                '''
            }
        }

        stage('Start Ethereum Besu Network') {
            steps {
                sh '''
                export TCF_HOME=$NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework
                echo `pwd`
                cd $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/docs/dev-environments/ethereum/besu
                ./startup.sh
                '''
            }
        }

        stage('Build Avalon Proxy Model Components') {
            steps {
                sh '''
                cd $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework
                mkdir logs
                echo `pwd`
                if [ "$WORKER_MODE" = "SINGLETON" ]; then
                    if [ "$SGX_MODE" = "SIM" ]; then
                        docker-compose -f ci/docker-compose-direct-model.yaml -f ci/docker-compose-besu-proxy-model.yaml build
                    else
                        ./scripts/sgx-hw.sh config/singleton_enclave_config.toml
                        docker-compose -f ci/docker-compose-direct-model.yaml -f ci/docker-compose-besu-proxy-model.yaml -f ci/docker-compose-direct-model-sgx.yaml build
                    fi
                else
                    if [ "$SGX_MODE" = "SIM" ]; then
                        docker-compose -f ci/docker-compose-direct-model.yaml -f ci/docker-compose-wp-direct-model.yaml -f ci/docker-compose-besu-proxy-model.yaml build
                    else
                        ./scripts/sgx-hw.sh config/kme_config.toml
                        ./scripts/sgx-hw.sh config/wpe_config.toml
                        docker-compose -f ci/docker-compose-direct-model.yaml -f ci/docker-compose-wp-direct-model.yaml -f ci/docker-compose-besu-proxy-model.yaml -f ci/docker-compose-direct-model-sgx.yaml build
                    fi
                fi

                '''
            }
        }

        stage('Run Avalon proxy Model Tests') {
            steps {
                sh '''
                cd $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework
                echo `pwd`
                if [ "$WORKER_MODE" = "SINGLETON" ]; then
                    if [ "$SGX_MODE" = "SIM" ]; then
                        INSTALL_TYPE="" $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/run_tests -b 2>&1 | tee logs/genericclient_output.txt
                    else
                        INSTALL_TYPE="" $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/run_tests -u 2>&1 | tee logs/genericclient_output.txt # run_tests doesn't have option for Besu SGX mode
                    fi
                else
                    if [ "$SGX_MODE" = "SIM" ]; then
                        INSTALL_TYPE="" $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/run_tests -i 2>&1 | tee logs/genericclient_output.txt # run_tests doesn't have option for Besu WP mode
                    else
                        INSTALL_TYPE="" $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/bin/run_tests -j 2>&1 | tee logs/genericclient_output.txt # run_tests doesn't have option for Besu WP SGX mode
                    fi
                fi
                python tests/Demo_Tests/verifytests.py -o logs/genericclient_output.txt
                '''
            }
        }

    }

    post {
        always {
            echo 'Cleaning up Ethereum network'
            sh '''
            export TCF_HOME=$NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework
            cd $NIGHTLY_WORKSPACE_DIR/dev_repo/trusted-compute-framework/docs/dev-environments/ethereum/besu
            ./cleanup.sh
            '''
        }
        aborted {
            error "Aborted, exiting now"
        }
        failure {
            error "Failed, exiting now"
        }
    }
}
